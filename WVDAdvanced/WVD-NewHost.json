{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Prefix": {
      "type": "string",
      "defaultValue": "wvd"
    },
    "AdminUserName": {
      "type": "string"
    },
    "AdminPassword": {
      "type": "securestring"
    },
    "DomainFQDN": {
      "type": "string"
    },
    "Instance": {
      "type": "int",
      "minValue": 1,
      "maxValue": 99,
      "defaultValue": 1
    },
    "OperatingSystem": {
      "type": "string",
      "defaultValue": "Client",
      "allowedValues": [
        "Server",
        "Client"
      ]
    },
    "Image": {
      "type": "string"
    },
    "VMSize": {
      "type": "string",
      "defaultValue": "Standard_B2ms",
      "allowedValues": [
        "Standard_B2ms",
        "Standard_DS3_v2",
        "Standard_DS14_v2"
      ]
    },
    "VnetRgName": {
      "type": "string"
    },
    "VnetName": {
      "type": "string"
    },
    "SubnetName": {
      "type": "string"
    }
  },
  "variables": {
    "VM_SIZES": {
      "Standard_B2ms": {
        "WVDsize": "Standard_B2ms"
      },
      "Standard_DS3_v2": {
        "WVDsize": "Standard_DS3_v2"
      },
      "Standard_DS14_v2": {
        "WVDsize": "Standard_DS14_v2"
      }
    },
    "License": {
      "Server": {
        "License": "Windows_Server"
      },
      "Client": {
        "License": "Windows_Client"
      },
      "Multi": {
        "License": "Windows_Client"
      }
    },
    "VMName": "[concat(parameters('Prefix'),'-VM-')]",
    "subnetRef": "[concat(subscription().id,'/resourceGroups/',parameters('VnetRgName'),'/providers/Microsoft.Network/virtualNetworks/', parameters('VnetName'),'/subnets/', parameters('subnetName'))]",
    "JoinUser": "[concat(parameters('adminUsername'),'@',parameters('DomainFQDN'))]"
    },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(variables('VMName'),copyIndex(),'-nic')]",
      "apiVersion": "2018-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "WVDNic-Copy",
        "count": "[parameters('Instance')]"
      },
      "tags": {
        "costcode": "AA-Money",
        "displayName": "WVD-Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ]
      },
      "dependsOn": [
        
      ]

    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(variables('VMName'),copyIndex())]",
      "apiVersion": "2019-03-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "WVD-Copy",
        "count": "[parameters('Instance')]"
      },
      "tags": {
        "costcode": "AA-Money",
        "displayName": "WVD-VM"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('VM_SIZES')[parameters('VMSize')].WVDsize]"
        },
        "storageProfile": {
          "osDisk": {
            "name": "[concat(variables('VMName'),copyIndex(),'-OSDisk')]",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "StandardSSD_LRS"
            }
          },
          "imageReference": {
              "id": "[parameters('Image')]"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('VMName'),copyIndex(),'-nic'))]"
            }
          ]
        },
        "osProfile": {
          "computerName": "[concat(variables('VMName'),copyIndex())]",
          "adminUsername": "[parameters('AdminUserName')]",
          "adminPassword": "[parameters('AdminPassword')]",
          "windowsConfiguration": {
            "enableAutomaticUpdates": true,
            "provisionVmAgent": true
          }
        },
        "licenseType": "[variables('License')[parameters('OperatingSystem')].License]"
      },
      "zones": [
        1
      ],
      "dependsOn": [
        "WVDNic-Copy"
      ]
    },    
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('VMName'),copyIndex(), '/joinDomain')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "JoinDomain-Copy",
        "count": "[parameters('Instance')]"
      },
      "tags": {
        "displayName": "Join Domain"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('DomainFQDN')]",
          "User": "[variables('JoinUser')]",
          "Restart": "true",
          "Options": "3"
        },
        "protectedSettings": {
          "Password": "[parameters('adminPassword')]"
        }
      },
      "dependsOn": [
        "WVD-Copy"
      ]
    }
  ],
  "outputs": {

  }
}
